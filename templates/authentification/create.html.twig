{% extends 'base/index.html.twig' %}


{% block title %}Hello AuthentificationController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h2>Inscriptions</h2>
        {{ form_start(formAuth) }}
        <div class="form-group">
            <label for="">FirstName</label>
            {{ form_widget(formAuth.firstname) }}
            <label for="">LastName</label>
            {{ form_widget(formAuth.lastname) }}
            <label for="">DuckName</label>
            {{ form_widget(formAuth.duckname) }}
            <label for="">email</label>
            {{ form_widget(formAuth.email) }}
            <label for="">password</label>
            {{ form_widget(formAuth.password) }}
            <label for="">image de profil</label>
            {{ form_widget(formAuth.ProfilImage) }}
        </div>
        <button type="submit" class="btn btn-sucess">
            {% if editMode  %}
            Update
            {% else %}
            Register</button>
        {% endif %}
        {{ form_end(formAuth) }}
    </div>
{% endblock %}
