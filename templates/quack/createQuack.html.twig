{% extends 'base/index.html.twig' %}


{% block title %}Hello createQuack!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Publier un quack âœ…</h1>
        {{ form_start(form) }}
        <div class="card form-group">
            <label for="">Content</label>
            {{ form_widget(form.content) }}
